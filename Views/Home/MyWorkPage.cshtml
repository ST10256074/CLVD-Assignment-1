@* @Model int *@
@{
}
@{
    ViewData["Title"] = "Products";
    var userID = -1;
    if (ViewData["userID"] != null)
    {
        userID = int.Parse(ViewData["userID"].ToString());

    }
    var products = ViewData["Products"] as List<Cloud_Aissgnment_1.Models.productTable>;
}

<div class="product-center-block">
    <h1>Products </h1>
    @if (userID != -1)
    {
        <form asp-controller="Product" asp-action="ProductAdd" method="post">
            <input class="addProductButton" type="submit" value="Add Product">
        </form>
    }


    <div class="grid-container">
        @foreach (var item in products)
        {
            <form asp-controller="Product" asp-action="Cart" method="post" class="grid-item">

                <button class="product_button">
                    <p class="grid-item-text">@item.Name</p>
                    <img class="center img-block" src=@item.ImageSrcString />
                    <p class="grid-item-text">R @item.Price</p>
                    <p class="grid-item-text">Category: @item.Category</p>
                    <p class="grid-item-text">Instock: @item.Availability</p>
                    <input type="hidden" name="userID" value="@userID" />
                    <input type="hidden" name="productID" value="@item.ID" />
                    @* <input type="submit" value="Buy" /> *@
                </button>
            </form>

        }
    </div>
</div>
