@{
    ViewData["Title"] = "My Work";
    var userID = ViewData["userID"];
    var products = ViewData["Products"] as List<Cloud_Aissgnment_1.Models.productTable>;
}

<div class="center-block">
    @*CHange to userID != -1*@
    @if (true)
    {
        
        <h1>Products </h1>
        <form asp-controller="Product" asp-action="ProductAdd" method="post"><input class="addProductButton" type="submit" value="Add Product"></form>
    }

    <div class="item-grid"></div>

    <div class="grid-container">
        <div class="grid-item">
            <p class="grid-item-text">Bolgatanga Baskets</p>
            @*https://www.babycouture.co.za/products/easter-grass-baskets*@
            <img src="~/img/Earth_red_handle_1024x1024_2x_de0f90a2-0bc7-40dd-82d2-f68bc0378d3d_1024x1024@2x.webp" alt="Bolgatanga Baskets" class="center img-block" />
            <p class="grid-item-text">R1500</p>
        </div>
        <div class="grid-item">
            <p class="grid-item-text">Ebony Wood Sculptures</p>
            @*https://www.effetto.com/item/f5aa4a2f-african-woman-bust-hand-carved-ebony-wooden-sculpture*@
            <img src="~/img/carved-ebony-sculpture.jpg" alt="Wood Sculpture" class="center img-block" />
            <p class="grid-item-text">R3000</p>
        </div>
        <div class="grid-item">
            <p class="grid-item-text">Beaded Decorations</p>
            @*https://www.janiecrow.com/beaded-decorations.html*@
            <img src="~/img/beaded-decorations.jpeg" alt="Beaded Decorations" class="center img-block" />
            <p class="grid-item-text">R250</p>
        </div>
        @foreach (var item in Model)
        {
            <div class="grid-item">
                <p class="grid-item-text">item.name</p>
                <img src=item.picture />
                <p class="grid-item-text">item.price</p>
            </div>
        }

